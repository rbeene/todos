<%= link_to "Create new todo", new_todo_path %>

<ul>
  <% @todos.each do |todo| %>
    <li data-id='<%= todo.id %>' data-state='<%= todo.state %>'>
      <%= todo.title %>
      <%= link_to 'Complete', todo_completion_path(todo), method: :post %>
      <%= link_to 'Incomplete', todo_completion_path(todo), method: :delete %>
    </li>
  <% end %>
</ul>
